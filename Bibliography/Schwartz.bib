isbn = {0042-6989 (Print)$\backslash$r0042-6989 (Linking)},
issn = {00426989},
journal = {Vision Research},
keywords = {Quasiconformal mapping,Retinotopic,Topographic map complex,Topographic modeling,Visual cortex},

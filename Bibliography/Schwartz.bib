isbn = {0893-6080 (Print)$\backslash$r0893-6080 (Linking)},
issn = {08936080},
journal = {Neural Networks},
keywords = {Extra-striate cortex,Models of visual cortex,Primary visual cortex (V1),Quasiconformal mapping,Striate cortex,Topographic shear,Topography,Visuotopy},
number = {10},
pages = {1157--1163},
